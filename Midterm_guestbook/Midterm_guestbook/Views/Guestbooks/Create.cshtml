@model Midterm_guestbook.Models.Guestbook

@{
    ViewData["Title"] = "新建留言";
}

    <h1 class="text-center">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-12">
        <form class="" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Title" class="control-label col-lg-1 col-2"></label>
                <input asp-for="Title" class="form-control col-lg-11 col-9" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Tag" class="control-label col-lg-1 col-2"></label>
                <input asp-for="Tag" class="form-control col-lg-11 col-9" />
                <span asp-validation-for="Tag" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Comment" class="control-label col-lg-1 col-2"></label>
                <textarea rows="5" asp-for="Comment" class="form-control col-lg-11 col-9"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回清單</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
